# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/red_tetris
DB_HOST=localhost
DB_PORT=5432
DB_PASSWORD=your_secure_password
DB_USER=your_username
DB_NAME=red_tetris

# Server
PORT=3000
NODE_ENV=development

# JWT - IMPORTANT: Use long, random, secure secrets!
JWT_SECRET=your-super-secure-jwt-secret-key-here-make-it-long-and-random-123456789
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-different-from-jwt-secret-987654321
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session - IMPORTANT: Use a long, random, secure secret!
SESSION_SECRET=your-session-secret-here-also-make-this-random-and-secure

# 42 OAuth - Get these from your 42 intranet OAuth app settings
FORTY_TWO_CLIENT_ID=your-42-client-id
FORTY_TWO_CLIENT_SECRET=your-42-client-secret
FORTY_TWO_CALLBACK_URL=http://localhost:5173/auth/42/callback

# Frontend URL
CLIENT_URL=http://localhost:5173/

# 42 API URLs (usually don't need to change these)
FORTY_TWO_API_BASE=https://api.intra.42.fr
FORTY_TWO_TOKEN_URL=https://api.intra.42.fr/oauth/token
FORTY_TWO_PROFILE_URL=https://api.intra.42.fr/v2/me

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
JWT_EXPIRES_IN=7d

# Session
SESSION_SECRET=

# 42 OAuth
FORTY_TWO_CLIENT_ID=
FORTY_TWO_CLIENT_SECRET=
FORTY_TWO_CALLBACK_URL=http://localhost:3000/api/auth/42/callback