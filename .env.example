# Copy this file to .env and fill in your actual values
# This root .env is loaded by docker-compose for the server.
# For local non-docker runs, you can keep DB_HOST=localhost. For Docker dev, DB_HOST=db.

# =========================
# Database
# =========================
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=red_tetris
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# =========================
# Server
# =========================
PORT=3000
NODE_ENV=development

# =========================
# JWT (use long, random strings in production)
# =========================
JWT_SECRET=change-me-to-a-long-random-string
JWT_REFRESH_SECRET=change-me-to-another-long-random-string
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d


# =========================
# 42 OAuth
# =========================
FORTY_TWO_CLIENT_ID=
FORTY_TWO_CLIENT_SECRET=
FORTY_TWO_CALLBACK_URL=http://localhost:3000/api/auth/42/callback

# =========================
# Frontend URL / CORS
# =========================
CLIENT_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# For LAN access, use:
# CORS_ORIGIN=*

# =========================
# Vite/Client Variables
# =========================
VITE_API_BASE=http://localhost:3000/api
VITE_API_URL=http://localhost:3000

# =========================
# Rate Limiting
# =========================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =========================
# Session
# =========================
SESSION_SECRET=your-session-secret-here


